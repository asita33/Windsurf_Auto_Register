            </div>
        </div>
    </div>
    
    <script>
        let emails = [];
        let selectedEmail = null;
        let services = [];
        let selectedService = null;
        
        // é¡µé¢åŠ è½½æ—¶è·å–é‚®ç®±åˆ—è¡¨å’ŒæœåŠ¡åˆ—è¡¨
        window.addEventListener('load', () => {
            loadServices();
            loadEmails();
            // æ¯30ç§’è‡ªåŠ¨åˆ·æ–°
            setInterval(loadEmails, 30000);
        });
        
        // åŠ è½½æœåŠ¡åˆ—è¡¨
        async function loadServices() {
            try {
                const response = await fetch('/api/services');
                const data = await response.json();
                
                if (data.success) {
                    services = data.services;
                    renderServices();
                }
            } catch (error) {
                console.error('åŠ è½½æœåŠ¡åˆ—è¡¨å¤±è´¥:', error);
            }
        }
        
        // æ¸²æŸ“æœåŠ¡åˆ—è¡¨
        function renderServices() {
            const container = document.getElementById('serviceGrid');
            
            if (services.length === 0) {
                container.innerHTML = '<p>æš‚æ— å¯ç”¨æœåŠ¡</p>';
                return;
            }
            
            container.innerHTML = services.map(service => `
                <div class="service-option ${service.recommended ? 'recommended' : ''} ${selectedService === service.name ? 'selected' : ''}" 
                     onclick="selectService('${service.name}')">
                    <div class="service-name">${service.displayName}</div>
                    <div class="service-domain">${service.domain}</div>
                    <div class="service-desc">${service.description}</div>
                </div>
            `).join('');
        }
        
        // é€‰æ‹©æœåŠ¡
        function selectService(serviceName) {
            selectedService = serviceName;
            renderServices();
        }
        
        // åŠ è½½æ‰€æœ‰é‚®ç®±
        async function loadEmails() {
            try {
                const response = await fetch('/api/emails');
                const data = await response.json();
                
                if (data.success) {
                    emails = data.emails;
                    updateStats();
                    renderEmails();
                }
            } catch (error) {
                console.error('åŠ è½½é‚®ç®±å¤±è´¥:', error);
            }
        }
        
        // æ›´æ–°ç»Ÿè®¡æ•°æ®
        function updateStats() {
            const totalMessages = emails.reduce((sum, email) => sum + (email.messageCount || 0), 0);
            const activeEmails = emails.filter(email => email.messageCount > 0).length;
            
            document.getElementById('totalEmails').textContent = emails.length;
            document.getElementById('totalMessages').textContent = totalMessages;
            document.getElementById('activeEmails').textContent = activeEmails;
        }
        
        // æ¸²æŸ“é‚®ç®±åˆ—è¡¨
        function renderEmails() {
            const container = document.getElementById('emailList');
            
            if (emails.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                        </svg>
                        <h3>æš‚æ— é‚®ç®±</h3>
                        <p>ç‚¹å‡»"æ–°å»ºé‚®ç®±"åˆ›å»ºç¬¬ä¸€ä¸ªä¸´æ—¶é‚®ç®±</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = emails.map(email => `
                <div class="email-item ${selectedEmail === email.email ? 'selected' : ''}" 
                     onclick="selectEmail('${email.email}')">
                    <div class="email-header">
                        <div class="email-address">${email.email}</div>
                        <span class="badge ${email.messageCount > 0 ? 'success' : ''}">${email.messageCount || 0} å°é‚®ä»¶</span>
                    </div>
                    <div class="email-meta">
                        <span>ğŸ“… åˆ›å»º: ${formatTime(email.createdAt)}</span>
                        <span>â° ${getTimeAgo(email.createdAt)}</span>
                        <span>ğŸ”§ æœåŠ¡: ${email.service || 'æœªçŸ¥'}</span>
                    </div>
                    <div class="actions">
                        <button class="btn-small btn-success" onclick="event.stopPropagation(); checkMessages('${email.email}')">
                            æ£€æŸ¥é‚®ä»¶
                        </button>
                        <button class="btn-small" onclick="event.stopPropagation(); copyEmail('${email.email}')">
                            å¤åˆ¶é‚®ç®±
                        </button>
                        ${email.webUrl ? `<a href="${email.webUrl}" target="_blank" class="web-link" onclick="event.stopPropagation()">ğŸŒ ç½‘é¡µæŸ¥çœ‹</a>` : ''}
                        <button class="btn-small btn-danger" onclick="event.stopPropagation(); deleteEmail('${email.email}')">
                            åˆ é™¤
                        </button>
                    </div>
                    <div id="messages-${email.email.replace(/[@.]/g, '-')}" class="messages-panel" style="display: none;"></div>
                </div>
            `).join('');
        }
        
        // é€‰æ‹©é‚®ç®±
        function selectEmail(email) {
            selectedEmail = email;
            renderEmails();
            checkMessages(email);
        }
        
        // æ£€æŸ¥é‚®ä»¶
        async function checkMessages(email) {
            const messagesPanel = document.getElementById(`messages-${email.replace(/[@.]/g, '-')}`);
            messagesPanel.style.display = 'block';
            messagesPanel.innerHTML = '<div class="loading"><div class="spinner"></div><p>åŠ è½½é‚®ä»¶ä¸­...</p></div>';
            
            try {
                const response = await fetch(`/api/get-messages/${encodeURIComponent(email)}`);
                const data = await response.json();
                
                if (data.success && data.messages.length > 0) {
                    // è·å–æ¯å°é‚®ä»¶çš„è¯¦æƒ…
                    const messageDetails = await Promise.all(
                        data.messages.map(msg => 
                            fetch(`/api/get-message/${encodeURIComponent(email)}/${msg.id}`)
                                .then(r => r.json())
                        )
                    );
                    
                    messagesPanel.innerHTML = messageDetails.map(detail => {
                        if (!detail.success) return '';
                        const msg = detail.message;
                        const code = detail.verificationCode;
                        
                        return `
                            <div class="message-item">
                                <div class="message-header">
                                    <span class="message-from">ğŸ“¨ ${msg.from}</span>
                                    <span class="message-date">${msg.date}</span>
                                </div>
                                <div class="message-subject">${msg.subject}</div>
                                <div class="message-body">${(msg.textBody || msg.body || '').substring(0, 200)}...</div>
                                ${code ? `
                                    <div class="verification-code">
                                        <p>ğŸ”‘ éªŒè¯ç :</p>
                                        <strong>${code}</strong>
                                    </div>
                                ` : ''}
                            </div>
                        `;
                    }).join('');
                    
                    // æ›´æ–°é‚®ä»¶è®¡æ•°
                    const emailObj = emails.find(e => e.email === email);
                    if (emailObj) {
                        emailObj.messageCount = data.messages.length;
                        updateStats();
                    }
                } else {
                    messagesPanel.innerHTML = '<p style="text-align: center; color: #999; padding: 20px;">æš‚æ— é‚®ä»¶</p>';
                }
            } catch (error) {
                messagesPanel.innerHTML = '<p style="text-align: center; color: #f44336; padding: 20px;">åŠ è½½å¤±è´¥</p>';
                console.error('æ£€æŸ¥é‚®ä»¶å¤±è´¥:', error);
            }
        }
        
        // åˆ›å»ºæ–°é‚®ç®±
        async function createNewEmail() {
            try {
                const body = selectedService ? JSON.stringify({ service: selectedService }) : '{}';
                const response = await fetch('/api/generate-email', { 
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: body
                });
                const data = await response.json();
                
                if (data.success) {
                    let message = `âœ… æ–°é‚®ç®±åˆ›å»ºæˆåŠŸ!\n\né‚®ç®±: ${data.email}\næœåŠ¡: ${data.service}`;
                    if (data.webUrl) {
                        message += `\n\nğŸŒ æŸ¥çœ‹é‚®ä»¶: ${data.webUrl}`;
                    }
                    if (data.info) {
                        message += `\n\nğŸ’¡ ${data.info}`;
                    }
                    alert(message);
                    loadEmails();
                } else {
                    alert('âŒ åˆ›å»ºå¤±è´¥: ' + data.error);
                }
            } catch (error) {
                alert('âŒ åˆ›å»ºå¤±è´¥: ' + error.message);
            }
        }
        
        // å¤åˆ¶é‚®ç®±
        function copyEmail(email) {
            navigator.clipboard.writeText(email).then(() => {
                alert('âœ… é‚®ç®±å·²å¤åˆ¶: ' + email);
            });
        }
        
        // åˆ é™¤é‚®ç®±
        async function deleteEmail(email) {
            if (!confirm(`ç¡®å®šè¦åˆ é™¤é‚®ç®± ${email} å—ï¼Ÿ`)) return;
            
            try {
                const response = await fetch(`/api/delete-email/${encodeURIComponent(email)}`, {
                    method: 'DELETE'
                });
                const data = await response.json();
                
                if (data.success) {
                    alert('âœ… åˆ é™¤æˆåŠŸ');
                    loadEmails();
                } else {
                    alert('âŒ åˆ é™¤å¤±è´¥');
                }
            } catch (error) {
                alert('âŒ åˆ é™¤å¤±è´¥: ' + error.message);
            }
        }
        
        // åˆ·æ–°é‚®ç®±åˆ—è¡¨
        function refreshEmails() {
            loadEmails();
        }
        
        // æ ¼å¼åŒ–æ—¶é—´
        function formatTime(timestamp) {
            const date = new Date(timestamp);
            return date.toLocaleString('zh-CN');
        }
        
        // è·å–ç›¸å¯¹æ—¶é—´
        function getTimeAgo(timestamp) {
            const seconds = Math.floor((Date.now() - timestamp) / 1000);
            
            if (seconds < 60) return 'åˆšåˆš';
            if (seconds < 3600) return `${Math.floor(seconds / 60)} åˆ†é’Ÿå‰`;
            if (seconds < 86400) return `${Math.floor(seconds / 3600)} å°æ—¶å‰`;
            return `${Math.floor(seconds / 86400)} å¤©å‰`;
        }
    </script>
