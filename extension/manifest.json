{
  "manifest_version": 3,
  "name": "Windsurf 自动注册助手",
  "version": "1.0.6",
  "description": "自动化注册 Windsurf 账号，自动获取验证码，账号管理 with temporary email",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.windsurf.com/*",
    "https://windsurf.com/*",
    "https://windsurf.com/account/*",
    "http://localhost:3000/*",
    "https://*.vercel.app/*",
    "https://*.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://windsurf.com/account/register*",
        "https://windsurf.com/account/*",
        "https://windsurf.com/editor/show-auth-token*"
      ],
      "js": ["config.private.js", "config.js", "api-helper.js", "content.js", "auto-monitor.js", "floating-panel.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["floating-panel.html"],
      "matches": ["https://windsurf.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
